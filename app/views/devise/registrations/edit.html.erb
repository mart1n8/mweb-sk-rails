<h2><%= t('edit').capitalize %> <%= t('auth.profile') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "shared/error_messages", model: resource %>


  <div class="row">
    <div class="col-6 pr-3">
        <h3>Heslo:</h3>
        <div class="mb-2">
          <%= f.label :current_password, t('auth.current_password').capitalize   %><br>
          <i>(súčasné heslo pre potvdenie zmien)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <hr class="py-2">
        <h3>Zmena údajov:</h3>
        <div class="mb-3">
            <%= f.label :email, t('auth.email').capitalize %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
         </div>
         <div class="mb-3">
            <%= f.label :username, t('auth.username').capitalize %><br />
            <%= f.text_field :username, autofocus: true,  class: "form-control" %>
        </div>
    </div>
    <div class="col-6">
        <h3>Zmena hesla:</h3>
        <div>
            <%= f.label :password, t('auth.new_password').capitalize %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :password_confirmation, t('auth.new_password_confirmation').capitalize   %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

    </div>
  </div>
<div class="row">
    <div class="col-12 mt-3 text-center">
      <%= f.submit t('save').upcase, class: "btn btn-primary" %>
    </div>
</div>
<% end %>
<hr class="text-danger">
<h3><%= t('auth.cancel_registration').capitalize %></h3>
<p>
  <%= button_to t('auth.cancel_my_registration').titleize, registration_path(resource_name), data: { confirm: "Si si istý že chceš vymazať svoj účet na tejto stránke?" }, method: :delete, class: "btn btn-danger" %>
</p>

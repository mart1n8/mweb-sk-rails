<h1><%= t('auth.users').capitalize%></h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th><%= t('auth.username').titleize %>:</th>
      <th><%= t('auth.email').titleize %>:</th>
      <th><%= t('auth.roles').titleize %>:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% user.roles.each do |role| %>
            <%= "#{role}, " %>
          <% end %>
        <td><%= link_to  material_icon.edit, admin_edit_user_path(user) %></td>
        <td><%= link_to material_icon.delete_forever, admin_delete_user_path(user), method: :delete, data: { confirm: 'Skutočne chcete vymazať tohto užívateľa?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

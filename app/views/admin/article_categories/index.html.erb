<h1><%= t('article_category.article_categories').capitalize%></h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th><%= t('article_category.name').titleize %>:</th>
      <th><%= t('slug').titleize %>:</th>
      <th><%= t('article_category.logo').titleize %>:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_categories.each do |article_category| %>
      <tr>
        <td><%= article_category.name %></td>
        <td><%= article_category.slug %></td>
        <td><%= image_tag article_category.logo.url || "https://via.placeholder.com/100x100", class: "img-fluid photo", style: "max-height:2em" %></td>
        <td><%= link_to 'Edit', admin_edit_article_category_path(article_category) %></td>
        <td><%= link_to 'Destroy', admin_delete_article_category_path(article_category), method: :delete, data: { confirm: 'Skutočne chcete vymazať túto kategóriu?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<hr>
<h2><%= t('article_category.add_article_category').capitalize %></h2>
<%= render "form", article_category: @article_category, url: admin_add_article_category_path %>